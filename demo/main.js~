// ...

var freakAnimationSprite = new cc.Sprite();
        freakAnimationSprite.setPosition(cc.p(size.width / 2 - 18, 518));
        freakAnimationSprite.setAnchorPoint(cc.p(0.5, 1));

        var freakAnimation = new cc.Class.XMLAnimation(res['FREAK_' + freakDifficult + '_xml']);
        freakAnimation.onLoaded = function () {
            var frames = freakAnimation.getFrames();
            var animation = new cc.Animation(frames, 0.05);

            freakAnimationSprite.runAction(new cc.RepeatForever(new cc.Animate(animation)));
            self.addChild(freakAnimationSprite, 1);
        };

